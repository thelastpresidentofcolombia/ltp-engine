  <script>
    import { initPortal } from '@/lib/portal/portalAuth.client';
    import { errorStateHtml } from '@/lib/ui/icons';
    import type { PortalBootstrapV2 } from '@/types/portal';
    import {
      resolveWidgets,
      getWidgetSizeClass,
      WIDGET_REGISTRY,
      type WidgetContext,
    } from '@/lib/portal/dashboardWidgets';

    function renderDashboard(data: PortalBootstrapV2) {
      const content = document.getElementById('portal-content');
      if (!content) return;

      const opIds = Object.keys(data.operators);
      const primaryOpId = opIds[0] || null;
      const primaryOp = primaryOpId ? data.operators[primaryOpId] : null;

      // Derive vertical from scoped operator.
      // Single-op: use that operator's vertical directly.
      // Multi-op: neutralize to 'multi' so hero falls back to generic
      // until a proper operator scope selector is implemented (Phase 3).
      const derivedVertical = opIds.length === 1
        ? ((primaryOp as any)?.vertical || 'fitness')
        : 'multi';

      // Build widget context
      const portal = (primaryOp as any)?.portal ?? null;
      const ctx: WidgetContext = {
        bootstrap: data,
        portal,
        operatorId: primaryOpId,
        operatorName: primaryOp?.brandName || 'Portal',
        accentColor: primaryOp?.accentColor || '#6366f1',
        role: data.actor.role,
        greeting: data.actor.email.split('@')[0],
        vertical: derivedVertical,
      };

      // Resolve which widgets to show
      const widgetIds = resolveWidgets(portal, data.actor.role, data.features);

      // Build Sectional Layout
      content.innerHTML = `
        <div class="dash-layout">
          <div id="dash-hero" class="dash-hero"></div>
          <div id="dash-dock" class="dash-dock"></div>
          <div class="bento-grid" id="bento-grid"></div>
        </div>
      `;
      
      const heroContainer = document.getElementById('dash-hero')!;
      const dockContainer = document.getElementById('dash-dock')!;
      const grid = document.getElementById('bento-grid')!;

      for (const wid of widgetIds) {
        const renderer = WIDGET_REGISTRY[wid];
        if (!renderer) continue;

        // Route special widgets to special containers
        if (wid === 'welcome') {
          const cell = document.createElement('div');
          cell.className = 'w-cell bento-full'; // Full width but styled transparent by CSS
          heroContainer.appendChild(cell);
          renderer(cell, ctx);
          continue;
        }

        if (wid === 'quick-actions') {
          const cell = document.createElement('div');
          cell.className = 'w-cell bento-full';
          dockContainer.appendChild(cell);
          renderer(cell, ctx);
          continue;
        }

        // Standard Grid Widgets
        const cell = document.createElement('div');
        cell.className = `w-cell ${getWidgetSizeClass(wid)}`;
        cell.dataset.widget = wid;
        
        // Add staggered animation delay based on grid position
        const index = grid.children.length;
        cell.style.animationDelay = `${0.1 + (index * 0.05)}s`;
        
        grid.appendChild(cell);

        try {
          renderer(cell, ctx);
        } catch (err) {
          console.error(`[Dashboard] Widget "${wid}" render failed:`, err);
          cell.innerHTML = `<div class="w-card-inner">${errorStateHtml({ title: 'Widget Error', desc: 'This widget failed to load.' })}</div>`;
        }
      }
    }

    // Boot
    initPortal()
      .then(renderDashboard)
      .catch((err) => {
        console.error('[Dashboard] Failed:', err);
        const content = document.getElementById('portal-content');
        if (content) {
          content.innerHTML = errorStateHtml({ title: 'Unable to Load Dashboard', desc: 'Something went wrong loading this page.', retry: { label: 'Reload Page', id: 'btn-reload-dashboard' } });
          document.getElementById('btn-reload-dashboard')?.addEventListener('click', () => location.reload());
        }
      });
  </script>
