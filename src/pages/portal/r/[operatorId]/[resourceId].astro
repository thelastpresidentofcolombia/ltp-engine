---
/**
 * Gated Resource Page — /portal/r/{operatorId}/{resourceId}
 * 
 * ENGINE CONTRACT:
 * - Static pre-rendered (paths from getAllResourcePaths)
 * - Resource definition passed to client as JSON
 * - Client handles auth + entitlement check
 * - Renders resource content based on action type
 * 
 * SECURITY MODEL:
 * - Page HTML is static and cached
 * - Actual content rendering requires valid auth + entitlement
 * - Client-side gate prevents unauthorized viewing
 */

import { getResourceDefinition, getAllResourcePaths } from "@/data/resources";

// Generate static paths for all resources
export async function getStaticPaths() {
  const paths = getAllResourcePaths();
  
  return paths.map(({ operatorId, resourceId }) => ({
    params: { operatorId, resourceId },
  }));
}

const { operatorId, resourceId } = Astro.params;

// Server-side: load resource definition
const resource = getResourceDefinition(operatorId!, resourceId!);

// If resource doesn't exist in registry, this is a build error (shouldn't happen with getStaticPaths)
if (!resource) {
  return new Response("Resource not found", { status: 404 });
}

// Serialize for client
const resourceJson = JSON.stringify(resource);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{resource.label} | Portal</title>
    <style is:global>
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: #0a0a0a;
        color: #fafafa;
        line-height: 1.6;
      }
      .shell {
        max-width: 860px;
        margin: 0 auto;
        padding: 32px 16px;
      }
      .card {
        padding: 24px;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 16px;
        background: rgba(255,255,255,0.03);
        margin-bottom: 16px;
      }
      .muted { opacity: 0.7; }
      .error { color: #f87171; }
      .success { color: #4ade80; }
      .loading {
        text-align: center;
        padding: 48px;
        opacity: 0.6;
      }
      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 20px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.15);
        background: rgba(255,255,255,0.05);
        color: #fafafa;
        font-size: 0.95rem;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        transition: background 0.2s, border-color 0.2s;
      }
      .btn:hover {
        background: rgba(255,255,255,0.1);
        border-color: rgba(255,255,255,0.25);
      }
      .btn-primary {
        background: #fafafa;
        color: #0a0a0a;
        border-color: transparent;
      }
      .btn-primary:hover {
        background: #e5e5e5;
      }
      h1 { font-size: 1.75rem; font-weight: 600; margin: 0 0 8px; }
      h2 { font-size: 1.5rem; font-weight: 600; margin: 0 0 12px; }
      h3 { font-size: 1.15rem; font-weight: 600; margin: 24px 0 12px; }
      p { margin: 0 0 16px; }
      ul { margin: 0 0 16px; padding-left: 24px; }
      li { margin-bottom: 6px; }
      .nav-back {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 24px;
        font-size: 0.9rem;
        opacity: 0.7;
      }
      .nav-back a {
        color: inherit;
        text-decoration: none;
      }
      .nav-back a:hover {
        text-decoration: underline;
      }
      .video-wrapper {
        aspect-ratio: 16/9;
        width: 100%;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.1);
        margin: 16px 0;
      }
      .video-wrapper iframe {
        width: 100%;
        height: 100%;
        border: 0;
      }
      .download-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 12px;
        margin-bottom: 12px;
        background: rgba(255,255,255,0.02);
      }
      .download-item-label {
        font-weight: 500;
      }
      .section-content {
        white-space: pre-wrap;
      }
    </style>
  </head>
  <body>
    <main class="shell">
      <nav class="nav-back">
        <span>←</span>
        <a href="/portal">Back to Portal</a>
      </nav>
      
      <div id="resource-root"
           data-operator-id={operatorId}
           data-resource-id={resourceId}
           data-resource={resourceJson}>
        <div class="loading">
          <h1>Verifying access...</h1>
          <p class="muted">Please wait while we check your entitlement.</p>
        </div>
      </div>
    </main>

    <script>
      import "../../../../lib/portal/resourcePage.client";
    </script>
  </body>
</html>
