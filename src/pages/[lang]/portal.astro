/**
 * /en/portal, /es/portal -> /portal (redirect to v2 portal)
 *
 * ENGINE CONTRACT:
 * - Legacy bookmarks from the v1 portal hit these routes.
 * - Redirects to /portal which is the v2 auth + operator-scoped entry point.
 */

import type { GetStaticPaths } from 'astro';
import { SUPPORTED_LANGUAGES } from '@config/seo';

export const getStaticPaths: GetStaticPaths = async () => {
  return SUPPORTED_LANGUAGES.map((lang) => ({
    params: { lang },
  }));
};

return Astro.redirect('/portal', 302);
