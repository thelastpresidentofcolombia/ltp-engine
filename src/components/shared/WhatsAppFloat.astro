---
/**
 * WhatsAppFloat - Engine-wide floating WhatsApp button
 * 
 * Features:
 * - Uses operator's accent color automatically
 * - Positioned bottom-right, above footer
 * - Smooth hover animation
 * - Mobile-friendly touch target
 * - Opens WhatsApp with pre-filled message (optional)
 */

interface Props {
  whatsappNumber: string;
  prefilledMessage?: string;
  label?: string;
}

const { 
  whatsappNumber, 
  prefilledMessage = '',
  label = 'Chat on WhatsApp'
} = Astro.props;

// Clean number: remove spaces, dashes, keep + prefix
const cleanNumber = whatsappNumber.replace(/[\s-]/g, '');

// Build WhatsApp URL
const baseUrl = `https://wa.me/${cleanNumber.replace('+', '')}`;
const whatsappUrl = prefilledMessage 
  ? `${baseUrl}?text=${encodeURIComponent(prefilledMessage)}`
  : baseUrl;
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={label}
  class="whatsapp-float"
>
  <!-- WhatsApp Icon (official) -->
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 24 24" 
    fill="currentColor"
    class="w-7 h-7"
    aria-hidden="true"
  >
