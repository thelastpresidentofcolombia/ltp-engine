---
/**
 * Offers Module (Engine Default)
 * 
 * Displays service packages/offers.
 */

import type { Operator } from '@/types/operator';

interface Props {
  operator: Operator;
  variant?: string;
}

const { operator, variant = 'offers-cards' } = Astro.props;
const offers = (operator as any).offers || [];

const lang = (operator as any).lang || operator._meta?.lang || 'en';
const labels: Record<string, { title: string; featured: string }> = {
  en: { title: 'What We Offer', featured: 'Featured' },
  es: { title: 'Lo Que Ofrecemos', featured: 'Destacado' },
};
const t = labels[lang] || labels.en;
---

{offers && offers.length > 0 && (
  <div class="offers">
    <div class="container">
      <h2 class="section-title">{t.title}</h2>
      
      <div class="offers-grid">
        {offers.map((offer: any) => (
          <div class={`offer-card ${offer.highlight ? 'highlighted' : ''}`}>
            {offer.highlight && (
              <span class="offer-badge">{t.featured}</span>
            )}
            <h3 class="offer-title">{offer.title}</h3>
            <p class="offer-description">{offer.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
)}

<style>
  .offers {
    padding: 5rem 2rem;
    background: var(--color-bg-base);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .section-title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-text-primary);
  }
  
  .offers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  
  .offer-card {
    position: relative;
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2rem;
    transition: all 0.2s ease;
  }
  
  .offer-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .offer-card.highlighted {
    border-color: var(--color-accent);
    background: linear-gradient(135deg, var(--color-bg-surface) 0%, var(--color-bg-elevated) 100%);
  }
  
  .offer-badge {
    position: absolute;
    top: -0.75rem;
    right: 1rem;
    background: var(--color-accent);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-md);
  }
  
  .offer-title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
  }
  
  .offer-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
</style>
